generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "cockroachdb"
  url      = env("DATABASE_URL")
}

model Admin {
  id       String  @id @default(uuid())
  name     String
  email    String  @unique
  password String
  isVerify Boolean @default(false) @map("is_verify")
  deleted  Boolean @default(false)

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  batch           Batch[]
  supplier        Supplier[]
  supplierPayment SupplierPayment[]
  warehouse       Warehouse[]

  @@map("admins")
}

model Otp {
  id        String   @id @default(uuid())
  code      String
  email     String   @unique
  expiredAt DateTime @map("expired_at")

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("otps")
}

model Rice {
  id   String @id @default(uuid())
  name String // မကြမ်းထောဆန်ကြမ်း / ရွှေဘိုပေါ်ဆန်းမွှေး / spsဆန်ချော

  deleted   Boolean  @default(false)
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  batchItem           BatchItem[]
  supplierPaymentItem SupplierPaymentItem[]
  warehouseItem       WarehouseItem[]

  @@map("rices")
}

model Supplier {
  id      String   @id @default(uuid())
  name    String
  phone   String[]
  address String?

  deleted   Boolean  @default(false)
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  creatorId String @map("creator_id")
  creator   Admin  @relation(fields: [creatorId], references: [id])

  batch Batch[]

  @@map("suppliers")
}

model Batch {
  id               String      @id @default(uuid())
  batchNo          String      @map("batch_no")
  totalStock       Int         @default(0) @map("total_stock")
  paid             Boolean     @default(false)
  items            BatchItem[]
  storeInWarehouse Boolean     @default(false) @map("store_in_warehouse")

  deleted Boolean @default(false)

  supplierId String   @map("supplier_id")
  supplier   Supplier @relation(fields: [supplierId], references: [id])
  creatorId  String   @map("creator_id")
  creator    Admin    @relation(fields: [creatorId], references: [id])
  createdAt  DateTime @default(now()) @map("created_at")
  updatedAt  DateTime @updatedAt @map("updated_at")

  supplierPayment SupplierPayment[]

  @@map("batches")
}

model BatchItem {
  id          String  @id @default(uuid())
  totalStock  Int     @default(0) @map("total_stock")
  remainStock Int     @default(0) @map("remain_stock")
  paidQty     Int     @default(0) @map("paid_qty")
  paid        Boolean @default(false)

  riceId    String   @map("rice_id")
  rice      Rice     @relation(fields: [riceId], references: [id])
  batchId   String   @map("batch_id")
  batch     Batch    @relation(fields: [batchId], references: [id])
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("batch_items")
}

model SupplierPayment {
  id String @id @default(uuid())

  totalAmount  Int                   @default(0) @map("total_amount")
  item         SupplierPaymentItem[]
  note         String?
  otherCharges Json?
  paid         Boolean               @default(false)

  batchId String @map("batch_id")
  batch   Batch  @relation(fields: [batchId], references: [id])

  creatorId String   @map("creator_id")
  creator   Admin    @relation(fields: [creatorId], references: [id])
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("supplier_payments")
}

model SupplierPaymentItem {
  id String @id @default(uuid())

  price             Int             @default(0)
  qty               Int             @default(0)
  riceId            String          @map("rice_id")
  rice              Rice            @relation(fields: [riceId], references: [id])
  supplierPaymentId String          @map("supplier_payment_id")
  supplierPayment   SupplierPayment @relation(fields: [supplierPaymentId], references: [id])
  createdAt         DateTime        @default(now()) @map("created_at")
  updatedAt         DateTime        @updatedAt @map("updated_at")

  @@map("supplier_payment_items")
}

model Warehouse {
  id         String          @id @default(uuid())
  name       String
  address    String
  totalStock Int             @default(0) @map("total_stock")
  items      WarehouseItem[]

  deleted   Boolean  @default(false)
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  creatorId String @map("creator_id")
  creator   Admin  @relation(fields: [creatorId], references: [id])

  @@map("warehouses")
}

model WarehouseItem {
  id String @id @default(uuid())

  stock  Int    @default(0)
  riceId String @unique() @map("rice_id")
  rice   Rice   @relation(fields: [riceId], references: [id])

  warehouseId String    @map("warehouse_id")
  warehouse   Warehouse @relation(fields: [warehouseId], references: [id])
  createdAt   DateTime  @default(now()) @map("created_at")
  updatedAt   DateTime  @updatedAt @map("updated_at")

  @@map("warehouse_items")
}

